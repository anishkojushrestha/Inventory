                <table class="table table-bordered"  width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Unit ID</th>
                            <th>Unit Name</th>
                            <th>Base Ratio</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="table-body">

                    </tbody>
                    
                </table>
                <script id="row-template" type="text/x-mustache-template">
                   {{#data}}
