@model Product
@{
    ViewData["Title"] = "Details:: " + Model.ProductName;
}

<div class="container-fluid">
    <a class="btn btn-primary mb-1" asp-action="Index" asp-controller="Product">Go Back</a>
    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">Product Details</h4>
        </div>
        <div class="card-body">
            @Html.DisplayForModel()
        </div>
    </div>
</div>




