@model Product
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">
    <a class="btn btn-primary mb-1" asp-action="Index" asp-controller="Product">Go Back</a>
    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">Delete Product</h4>
        </div>
        <div class="card-body">
            <form asp-action="Delete" asp-controller="Product">

                @Html.AntiForgeryToken()
                @Html.HiddenFor(x=>Model.Id)
                @Html.EditorForModel()
            </form>
        </div>
    </div>
</div>